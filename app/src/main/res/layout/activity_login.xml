<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <LinearLayout
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
        android:background="#dedede"
        android:paddingTop="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
<TextView
    android:fontFamily="@font/nunito_bold"
    android:textColor="@android:color/black"
    android:textStyle="bold"
    android:textSize="26sp"
    android:layout_marginBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Kode Keluarga"/>
        <TextView
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ketikkan kode keluarga yang Ayah Bunda miliki disini"/>
        <EditText
            android:fontFamily="@font/rubik_regular"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="60dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@android:color/white"/>
        <TextView
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kebijakan"/>
        <Button
            android:id="@+id/btnmasuk"
            android:fontFamily="@font/nunito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:text="Masuk"
            android:textAllCaps="false"/>

    </LinearLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_weight="1">
        <TextView
            android:fontFamily="@font/nunito"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kebijakan2"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:fontFamily="@font/nunito"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Beli Kode Keluarga Disini"
            android:textAllCaps="false"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#8084f6"/>
    </RelativeLayout>
</LinearLayout>